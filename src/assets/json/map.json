{
  "version": 8,
  "name": "Dating Pastel Map",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://api.maptiler.com/tiles/v3/tiles.json?key=bzMao9el2hMjNjBRvWht"
    }
  },

  "glyphs": "https://api.maptiler.com/fonts/{fontstack}/{range}.pbf?key=bzMao9el2hMjNjBRvWht",

  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f9f4ee"
      }
    },

    {
      "id": "landcover",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "paint": {
        "fill-color": "#f7ecde",
        "fill-opacity": 0.35
      }
    },

    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#d5e7e9"
      }
    },

    {
      "id": "park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "park",
      "paint": {
        "fill-color": "#e9f3e7",
        "fill-opacity": 0.35
      }
    },

    /* --- YOLLAR --- */
    {
      "id": "road_minor",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "minor"],
      "paint": {
        "line-color": "#fefcf7",
        "line-width": 4
      }
    },

    {
      "id": "road_major",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "primary", "secondary"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": 2.3
      }
    },

    {
      "id": "road_trunk",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "trunk"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": 2.8
      }
    },

    {
      "id": "road_motorway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", "class", "motorway"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": 3.1
      }
    },

    /* --- İL / ŞEHİR İSİMLERİ --- */
    {
      "id": "city-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["in", "class", "city", "town"],
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Regular", "Arial Unicode MS Regular"],
        "text-size": 12,
        "text-offset": [0, 0]
      },
      "paint": {
        "text-color": "#c2b6a6",
        "text-halo-color": "#f9f4ee",
        "text-halo-width": 1.5
      }
    }
  ]
}
